<?xml version="1.0" encoding="utf-8"?>
<!-- 프로필 리스트 아이템 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:background="@drawable/shape_profile_list">

    <include
        android:id="@+id/profile_icon"
        layout="@layout/item_profile_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginLeft="12dp"
        android:layout_marginVertical="12dp"
        android:layout_centerVertical="true"/>

    <!-- 내용 -->
    <LinearLayout
        android:id="@+id/linear_profile_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/profile_icon"
        android:layout_centerVertical="true">

        <!-- 분위기 키워드 -->
        <TextView
            android:id="@+id/text_mood_keyword_for_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:text="귀여운"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/idear_gray_900"/>

        <!-- 엠비티아이 -->
        <TextView
            android:id="@+id/text_mbti_for_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ESFP"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/idear_gray_900"/>

        <!-- 반말 / 존댓말 -->
        <TextView
            android:id="@+id/text_formal_for_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(반말)"
            android:textSize="15sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>
        
    </LinearLayout>

    <TextView
        android:id="@+id/btn_edit_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="10dp"
        android:layout_marginVertical="19dp"
        android:layout_marginRight="12dp"
        android:text="@string/edit_profile"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:textStyle="bold"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:background="@drawable/shape_btn_edit_profile"/>

</RelativeLayout>